<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background_dark">


    <Button
        style="@style/LightMenuButton"
        android:id="@+id/new_game_button"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:text="New game"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintEnd_toEndOf="@+id/continue_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/continue_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/LightMenuButton"
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_marginBottom="120dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplayer_button"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        style="@style/DarkMenuButton"
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:text="Continue"
        app:layout_constraintBottom_toTopOf="@+id/multiplayer_button"
        app:layout_constraintEnd_toEndOf="@+id/multiplayer_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/multiplayer_button"
        app:layout_constraintTop_toBottomOf="@+id/new_game_button" />

    <Button
        style="@style/DarkMenuButton"
        android:id="@+id/multiplayer_button"
        android:layout_width="match_parent"
        android:text="Multiplayer"
        app:layout_constraintBottom_toTopOf="@+id/settings_button"
        app:layout_constraintEnd_toEndOf="@+id/settings_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/settings_button"
        app:layout_constraintTop_toBottomOf="@+id/continue_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
